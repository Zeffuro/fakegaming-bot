{
  "name": "@zeffuro/fakegaming-bot-api",
  "version": "1.0.0",
  "description": "API service for Fakegaming.eu Bot.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "author": "Zeffuro",
  "license": "AGPL-3.0-only",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "prod:dev": "cross-env NODE_ENV=production node --loader ts-node/esm src/index.ts",
    "start:dev": "cross-env NODE_ENV=development node --loader ts-node/esm src/index.ts",
    "lint": "eslint src --ext .ts --config ../../eslint.config.mjs",
    "test": "node --loader ts-node/esm --experimental-vm-modules ../../node_modules/jest/bin/jest.js --config ./jest.config.mjs --passWithNoTests",
    "export:openapi": "pnpm tsx scripts/export-openapi.ts",
    "postbuild": "pnpm run export:openapi"
  },
  "dependencies": {
    "@zeffuro/fakegaming-common": "workspace:*",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-jwt": "^8.5.1",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4"
  }
}