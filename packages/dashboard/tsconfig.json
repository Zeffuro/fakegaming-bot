{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/lib/common/testing.js": [
        "./lib/common/testing.ts"
      ],
      "@zeffuro/fakegaming-common/testing": [
        "../common/dist/testing/index.d.ts"
      ],
      "@zeffuro/fakegaming-common/testing/mocks/cache": [
        "../common/dist/testing/mocks/cacheMock.d.ts"
      ],
      "@zeffuro/fakegaming-common/testing/utils/jwt": [
        "../common/dist/testing/utils/jwtTestUtils.d.ts"
      ],
      "@zeffuro/fakegaming-common/utils": [
        "../common/dist/utils/index.d.ts"
      ]
    }
  },
  "include": [
    "app",
    "components",
    "lib",
    "util",
    "scripts",
    "src",
    "types",
    ".next/types/**/*.ts",
    "src/__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
