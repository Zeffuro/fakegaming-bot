{
  "name": "fakegaming-bot-monorepo",
  "private": true,
  "workspaces": [
    "packages/api",
    "packages/bot",
    "packages/dashboard",
    "packages/common"
  ],
  "type": "module",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "npm run build --workspace packages/common && npm run build --workspace packages/bot && npm run build --workspace packages/dashboard && npm run build --workspace packages/api",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspace packages/bot && npm run test --workspace packages/dashboard && npm run test --workspace packages/common && npm run test --workspace packages/api",
    "start:api": "npm --workspace packages/api run start",
    "start:bot": "npm --workspace packages/bot run start",
    "start:bot:dev": "npm --workspace packages/bot run start:dev",
    "start:dashboard": "npm --workspace packages/dashboard run start",
    "clean": "rimraf \"packages/*/dist\"",
    "install": "pnpm install"
  },
  "dependencies": {
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "umzug": "^3.8.2"
  }
}
