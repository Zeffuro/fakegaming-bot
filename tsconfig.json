{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "packages/dashboard/*"
      ],
      "@/lib/common/testing.js": [
        "packages/dashboard/lib/common/testing.ts"
      ]
    }
  },
  "include": [
    "packages/bot/src",
    "packages/common/src",
    "packages/dashboard/**/*",
    "packages/api/src",
    "scripts"
  ]
}